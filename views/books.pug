extends layout

block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each key in Object.keys(data)
        tr
          td
            a(href=`/books/${data[key].id}`) #{data[key].title}
          td #{data[key].author}
          td #{data[key].genre}
          td #{data[key].year}
        tr